<div class="row">
    <div class="col s12 m8">
        <h3>{{book.nama_buku}}
            
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY'}}</span>
            <p>Author buku = {{{book.author_buku}}}</p>
            <p>Section buku = {{{book.section_buku}}}</p>
            <p>Status buku = {{{book.status_buku}}}</p>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{book.user.displayName}}</span>
                <img src="{{book.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/books/user/{{book.user._id}}">PIC : {{book.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>